{% extends 'layout.html.twig' %}

{% block body %}
{{ parent() }}
	<div  class="container" style="margin-top: 101px;">
		{% for message in app.session.flashbag.get('notice') %}
			<div class="alert alert-danger">
			{{ message }}
			</div>
			{% endfor %}
	 {# <span class="text-danger">{{ erro }}</span>  #}
		<div class="panel panel-default">
          {# {% set flashbag_notices = app.session.flashbag.get('notice')  %}
		  {% for notice in flashbag_notices %}
		  {{ notice}}
		  {% endfor %} #}

		
 			{% if (page !='login') %}
			<div class="panel-heading">
			<h2>Ainda não possui cadastro?</h2>
			
			</div>
			{% else %}
			<div class="panel-heading"><h2>Login</h2>
			
			</div>
			{% endif %}
			<div class="box-form panel-body">
				<div class="row">
					{# {{ form_start(form)}} #}
										{{ form_start(form, { 'attr' : { 'novalidate': 'novalidate'}})}}
					
					  	<div class="form-group col-xs-9">
							<div class="col-sm-9 col-xs-9">
								{% if (page !='Login') %}
						        	 {{ form_widget(form.nome, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Nome Completo'}}) }}
							        <span class="text-danger">{{ form_errors(form.nome) }}</span> 
									

							   {% endif %} 
							</div>
						</div>
					 
						<div class="form-group  col-xs-9">
							<div class="col-sm-9  col-xs-9">
							   {{ form_widget(form.email, { 'attr' : {'class' : 'form-control', 'placeholder' : 'E-mail'} }) }}
								<span class="text-danger">{{ form_errors(form.email) }}</span>
								
								
								
							</div>
						</div>

						<div class="form-group col-xs-9">
							<div class="col-sm-9  col-xs-9">
								{{ form_widget(form.senha, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Senha'} }) }}
								<span class="text-danger">{{ form_errors(form.senha) }}</span>
							</div>
						</div>

					
						<div class="form-group col-xs-9">
							<div class="col-sm-9  col-xs-9">
								{% if (page !='login') %}
									{{ form_widget(form.confirma, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Confirma'} }) }}
								  {# <input id="confirma" name="confirma" minlength="6" placeholder="Comfirma" type="password" class="form-control"  #}
								  {# required="true" value="" maxlength="20" aria-required="true"> #}
								{% endif %}
							</div>
						</div>
						

						<div class="form-group col-xs-9">
							<div class="form-group col-sm-9 col-xs-12 submit-container"> 
								<button type="submit" id="btn-cadastro" class="btn btn-success btn-lg">{{ nome }}</button>
								{% if (page !='login') %}
									<h4>Já possui um cadastro? Faça o <a href="{{path('umespa_criaConta',{'cad':'login'})}}">Login</a></h4>
									{# {{path('umespa_criaConta',{'cad':'login'})}} #}
								{% endif %}
							</div>
						</div>
					
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}