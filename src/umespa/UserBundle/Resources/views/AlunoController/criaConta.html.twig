{% extends 'layout.html.twig' %}

{% block body %}
{{parent()}}
<div  class="container" style="margin-top: 101px;">
				
				<div class="box-form panel-body">
					
						
						<div class="row" id="email-account-container">
							<form id="form-register" name="form-register" class="loginItems" action="/criar-conta?targetUrl=" method="post" novalidate="novalidate">
                         {% if (page !='login') %}
                            <div class="form-group col-xs-9">
								  <label class="control-label col-sm-3 hidden-xs" for="nome">NOME:</label>
								  <div class="col-sm-9 col-xs-9">
									<input id="nome" name="nome" minlength="6" placeholder="Nome Completo" class="form-control" required="true" type="text" value="" maxlength="80" aria-required="true">
									
								  </div>
							</div>
                          {% endif %}  
							<div class="form-group  col-xs-9">
								<label class="control-label col-sm-3 hidden-xs" for="email">E-MAIL:</label>
								<div class="col-sm-9  col-xs-9">
								<input id="email" name="email" mailcustom="true" uniqueemail="true" placeholder="E-mail" data-url-validation="/usuario/email-validacao/" class="form-control" required="true" type="text" value="" maxlength="64" aria-required="true">
							    
								</div>
							</div>
							  <div class="form-group col-xs-9">
								  <label class="control-label col-sm-3 hidden-xs" for="senha">SENHA:</label>
								  <div class="col-sm-9  col-xs-9">
							  <input id="senha" name="senha" minlength="6" placeholder="Senha" type="password" class="form-control" required="true" value="" maxlength="20" aria-required="true">
							  
								  </div>
							</div>
								
								<div class="form-group col-xs-9">
									<label class="control-label col-sm-3 hidden-xs"></label>
							  <div class="form-group col-sm-9 col-xs-12 submit-container">  <button type="submit" id="btn-cadastro" class="btn btn-success btn-lg">{{ nome }}</button>
                            {% if (page !='login') %}

							<h4>Já possui um cadastro? Faça o <a href="/criaConta/login">Login</a></h4>
                            {% endif %}
                              </div>
							</div>
							<div>
</div></form>
						</div>
                      
				
				</div>
				</div>

{% endblock %}